<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin - Vamx Database Admin</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;600;700&display=swap" rel="stylesheet"/>
  <style>
    :root {
      --primary: linear-gradient(135deg,#6366f1,#3b82f6);
      --danger: linear-gradient(135deg,#ef4444,#dc2626);
      --glass-bg: rgba(255,255,255,0.1);
      --glass-border: rgba(255,255,255,0.3);
    }

    *,*::before,*::after{box-sizing:border-box;}

    body {
      font-family: 'Outfit', sans-serif;
      margin:0;
      padding:0;
      min-height:100vh;
      display:flex;
      justify-content:center;
      align-items:center;
      background: radial-gradient(circle at top left, #0f172a, #1e293b);
      color:white;
    }

    .container {
      width:100%;
      max-width:820px;
      padding:40px;
      border-radius:20px;
      background:var(--glass-bg);
      border:1px solid var(--glass-border);
      backdrop-filter: blur(14px);
      box-shadow:0 8px 40px rgba(0,0,0,0.5);
      animation: fadeInUp 0.8s ease-out;
    }

    @keyframes fadeInUp {
      from { opacity:0; transform:translateY(25px); }
      to { opacity:1; transform:translateY(0); }
    }

    /* HEADER */
    .header {
      text-align:center;
      margin-bottom:32px;
    }
    .header h1 {
      font-size:32px;
      font-weight:700;
      background:var(--primary);
      -webkit-background-clip:text;
      -webkit-text-fill-color:transparent;
      margin:10px 0 5px;
    }
    .header p {
      font-size:14px;
      color:#cbd5e1;
    }

    /* LINK RAW */
    .link-copy {
      text-align:right;
      margin-bottom:10px;
    }
    .link-copy a {
      font-size:13px;
      color:#93c5fd;
      text-decoration:none;
    }
    .link-copy a:hover {text-decoration:underline;}

    /* FORM */
    form {
      display:flex;
      gap:12px;
      margin-bottom:28px;
    }
    input[type="text"] {
      flex:1;
      padding:12px 16px;
      font-size:15px;
      border:none;
      border-radius:12px;
      background:rgba(255,255,255,0.15);
      color:white;
      outline:none;
      transition:0.3s;
    }
    input[type="text"]::placeholder {color:#94a3b8;}
    input[type="text"]:focus {
      background:rgba(255,255,255,0.25);
      box-shadow:0 0 0 2px #3b82f6;
    }
    button {
      padding:12px 20px;
      font-size:15px;
      font-weight:600;
      border:none;
      border-radius:12px;
      cursor:pointer;
      background:var(--primary);
      color:white;
      transition:0.3s;
    }
    button:hover {
      transform:scale(1.05);
      box-shadow:0 6px 20px rgba(59,130,246,0.4);
    }

    /* SEARCH */
    .search-box {
      position:relative;
      margin-bottom:20px;
    }
    .search-box .search-icon {
      position:absolute;
      top:50%;
      left:14px;
      transform:translateY(-50%);
      color:#9ca3af;
    }
    .search-box input {
      width:100%;
      padding:12px 16px 12px 42px;
      border:none;
      border-radius:12px;
      background:rgba(255,255,255,0.15);
      color:white;
      outline:none;
    }

    /* TABLE */
    table {
      width:100%;
      border-collapse:collapse;
      border-radius:12px;
      overflow:hidden;
      backdrop-filter: blur(6px);
    }
    th,td {
      padding:14px;
      text-align:center;
    }
    th {
      background:rgba(255,255,255,0.15);
      font-weight:600;
      font-size:14px;
    }
    td {
      border-bottom:1px solid rgba(255,255,255,0.1);
      font-size:14px;
    }
    tr:hover td {
      background:rgba(255,255,255,0.05);
    }

    .btn-red {
      background:var(--danger);
      color:white;
      padding:6px 14px;
      border:none;
      border-radius:8px;
      font-size:13px;
      font-weight:500;
      cursor:pointer;
      transition:0.3s;
    }
    .btn-red:hover {
      transform:scale(1.05);
      box-shadow:0 6px 20px rgba(239,68,68,0.4);
    }

    .alert {
      background:rgba(34,197,94,0.2);
      border:1px solid rgba(34,197,94,0.4);
      color:#bbf7d0;
      padding:12px;
      border-radius:8px;
      text-align:center;
      margin-bottom:20px;
      font-size:14px;
    }

    .footer {
      margin-top:30px;
      text-align:center;
      font-size:13px;
      color:#94a3b8;
    }
    .footer a {
      color:#60a5fa;
      text-decoration:none;
    }
    .footer a:hover {text-decoration:underline;}
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <i class="fas fa-database fa-2x" style="color:#60a5fa"></i>
      <h1>Vamx Database</h1>
      <p>Manajemen nomor akses dengan gaya modern</p>
    </div>

    <div class="link-copy">
      <a id="copyLink" href="#">Lihat versi RAW</a>
    </div>

    <form action="/admin-add" method="POST">
      <input type="text" name="number" placeholder="Masukkan nomor baru" required/>
      <button type="submit"><i class="fas fa-plus"></i> Tambah</button>
    </form>

    <% if (message) { %>
      <div class="alert"><%= message %></div>
    <% } %>

    <div class="search-box">
      <i class="fas fa-search search-icon"></i>
      <input type="text" id="searchInput" placeholder="Cari nomor..." onkeyup="filterTable()"/>
    </div>

    <table id="numberTable">
      <thead>
        <tr>
          <th>Nomor</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(item => { %>
          <tr>
            <td><%= item %></td>
            <td>
              <form action="/delete" method="POST" style="display:inline;">
                <input type="hidden" name="number" value="<%= item %>"/>
                <button class="btn-red" type="submit"><i class="fas fa-trash"></i> Hapus</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="footer">
      <a href="https://wa.me/6285791368765" target="_blank">[ Contact Developer ]</a>
    </div>
  </div>

  <script>
    document.getElementById('copyLink').href = window.location.origin + '/raw';

    function filterTable() {
      const input = document.getElementById("searchInput");
      const filter = input.value.toLowerCase();
      const table = document.getElementById("numberTable");
      const rows = table.getElementsByTagName("tr");
      for (let i = 1; i < rows.length; i++) {
        const td = rows[i].getElementsByTagName("td")[0];
        if (td) {
          const txtValue = td.textContent || td.innerText;
          rows[i].style.display = txtValue.toLowerCase().includes(filter) ? "" : "none";
        }
      }
    }

    window.addEventListener("DOMContentLoaded", () => {
      const alertEl = document.querySelector(".alert");
      if (alertEl) {
        setTimeout(() => {
          alertEl.style.transition = "opacity 0.5s ease-out";
          alertEl.style.opacity = "0";
          setTimeout(() => alertEl.remove(), 500);
        }, 4000);
      }
    });
  </script>
</body>
</html>